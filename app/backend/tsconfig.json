{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src/",
    "paths": {
      "@models/*": ["models/*"]
    }
  },
  "include": ["src/**/*", "src/*.ts"]
}
